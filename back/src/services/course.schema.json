{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["title", "modules"],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "modules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["title", "lessons"],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1
          },
          "lessons": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["title", "content"],
              "properties": {
                "title": {
                  "type": "string",
                  "minLength": 1
                },
                "content": {
                  "type": "string"
                },
                "examples": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "quizzes": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "question": {
                        "type": "string"
                      },
                      "type": {
                        "type": "string",
                        "enum": ["open", "multiple_choice", "single_choice"]
                      },
                      "options": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "answer": {
                        "type": ["string", "number", "null"]
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}

